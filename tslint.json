{
  "extends": ["tslint-angular"],
  "rules": {
    "angular-whitespace": false,
    "component-selector": [true, ["element", "attribute"], "app", "kebab-case"],
    "deprecation": { "severity": "error" },
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "max-classes-per-file": false,
    "no-access-missing-member": false,
    "no-angle-bracket-type-assertion": true,
    "no-any": true,
    "no-boolean-literal-compare": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-duplicate-imports": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-non-null-assertion": false,
    "no-output-named-after-standard-event": true,
    "no-string-literal": true,
    "object-literal-shorthand": true,
    "ordered-imports": [true, { "grouped-imports": true }],
    "quotemark": [true, "single", "avoid-escape"],
    "typedef": [true, "call-signature", "parameter", "property-declaration"]
  }
}
