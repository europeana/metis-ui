{
  "name": "metis-ui",
  "version": "3.0.1-development",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start-metis": "ng serve metis",
    "start-sandbox": "ng serve sandbox",
    "start": "npm run start-metis",
    "build-metis": "ng build metis",
    "build-sandbox": "ng build sandbox",
    "build": "npm run build-metis && npm run build-sandbox",
    "clean": "rm -rf ./dist && rm -rf ./projects/**/dist && rm -rf ./projects/**/coverage",
    "prettier": "prettier --write '{projects/metis,projects/sandbox}/{src,cypress,test-data}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "prettier:ci": "prettier --list-different '{projects/metis,projects/sandbox}/{src,cypress,test-data}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint-any": "eslint --ext .js,.ts projects/${npm_config_project} --fix",
    "lint:ci-any": "eslint --ext .ts projects/${npm_config_project}/src/app",
    "lint-metis": "npm run lint-any --project=metis",
    "lint:ci-metis": "npm run lint:ci-any --project=metis",
    "lint-sandbox": "npm run lint-any --project=sandbox",
    "lint:ci-sandbox": "npm run lint:ci-any --project=sandbox",
    "lint": "npm run lint-metis && npm run lint-sandbox",
    "lint:ci": "npm run lint:ci-metis && npm run lint:ci-sandbox",
    "fix": "npm run prettier && npm run lint",
    "test:dev-metis": "ng test metis",
    "test:dev-sandbox": "ng test sandbox",
    "test:dev": "npm run test:dev-metis && npm run test:dev-sandbox",
    "test": "npm run prettier:ci && npm run lint:ci && npm run template-check && npm run test:e2e",
    "test:ci-metis": "ng test metis --progress=false --watch=false --code-coverage --source-map=false",
    "test:ci-sandbox": "ng test metis --progress=false --watch=false --code-coverage --source-map=false",
    "test:ci": "npm run test:ci-metis && npm run test:ci-sandbox",
    "test:e2e-metis": "npm run tsc-metis-test-data && ((node ./projects/metis/dist/out-tsc/test-data/index.js) & (npm run cypress:ci ; fuser -k 3000/tcp))",
    "test:e2e": "npm run test:e2e-metis",
    "template-check-metis": "ng build metis --progress=false --output-path=tmp/template-check --aot",
    "template-check-sandbox": "ng build sandbox --progress=false --output-path=tmp/template-check --aot",
    "template-check": "npm run template-check-metis && npm run template-check-sandbox",
    "tsc-metis-test-data": "tsc --project projects/metis/src/tsconfig.test-data.json",
    "tsc": "npm run tsc-metis-test-data",
    "cypress:ci-metis": "run-p --race start:ci-metis cypress:run-metis",
    "cypress:ci": "npm run cypress:ci-metis",
    "cypress:run-metis": "sleep 10 && cypress run --project projects/metis",
    "cypress:run": "npm run cypress:run-metis",
    "cypress": "cypress open --project projects/metis",
    "start:ci-metis": "ng serve --project=metis --port 4280 --live-reload=false --configuration=e2e",
    "start:ci": "npm run start:ci-metis",
    "start:ci-data-metis": "npm run tsc-metis-test-data && node ./projects/metis/dist/out-tsc/test-data/index.js",
    "start:ci-data": "npm run start:ci-data-metis",
    "dist-metis-copy-conf": "cp projects/metis/src/static/manifest.yml projects/metis/src/static/Staticfile projects/metis/src/static/nginx.conf projects/metis/dist/metis",
    "dist-metis": "npm run i18n && ng build metis --progress=false --prod && npm run dist-metis-copy-conf && cp -R projects/metis/dist/metis/. dist",
    "dist": "npm run dist-metis",
    "i18n": "ng xi18n --output-path locale --out-file messages.en-GB.xlf",
    "lite": "test -d ./dist && lite-server --baseDir=./dist || echo '(run dist first)'"
  },
  "private": true,
  "engines": {
    "node": ">=14.0.1 <15.0.1",
    "npm": ">=6.14.5"
  },
  "dependencies": {
    "@angular/common": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/forms": "^10.2.4",
    "@angular/localize": "^10.2.4",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@angular/router": "^10.2.4",
    "@ctrl/ngx-codemirror": "^4.1.0",
    "codemirror": "^5.59.0",
    "core-js": "^2.6.12",
    "lodash-es": "^4.17.20",
    "ng-click-outside": "^7.0.1",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "vkbeautify": "^0.99.3",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1100.5",
    "@angular/cli": "^10.2.1",
    "@angular/compiler": "^10.2.4",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@cypress/webpack-preprocessor": "^4.1.5",
    "@types/codemirror": "0.0.71",
    "@types/jasmine": "^3.6.2",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.19.9",
    "@types/vkbeautify": "^0.99.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@typescript-eslint/types": "^4.10.0",
    "angular2-template-loader": "^0.6.2",
    "babel-loader": "^8.0.5",
    "codelyzer": "^5.1.2",
    "cypress": "^3.8.3",
    "eslint": "^6.8.0",
    "eslint-plugin-rxjs": "0.0.3-beta.30",
    "http-server": "^0.12.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lite-server": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "tar": "^4.4.8",
    "ts-loader": "^5.3.3",
    "typescript": "^3.9.7",
    "wallaby-webpack": "^3.9.16",
    "webpack": "^4.44.2"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
