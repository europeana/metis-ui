{
  "name": "metis-ui",
  "version": "1.7.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "prettier": "prettier --write '{src,cypress,test-data}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint": "eslint --ext .js,.ts src/app --fix",
    "fix": "npm run prettier && npm run lint",
    "test:dev": "ng test  --code-coverage",
    "cypress": "cypress open",
    "test": "npm run prettier:ci && npm run lint:ci && npm run template-check && npm run test:e2e",
    "template-check": "ng build --progress=false --output-path=tmp/template-check --aot",
    "tsc": "tsc",
    "prettier:ci": "prettier --list-different '{src,cypress}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint:ci": "eslint --ext .ts src/app",
    "test:ci": "ng test --progress=false --watch=false --code-coverage --source-map=false",
    "cypress:ci": "run-p --race start:ci cypress:run",
    "start:ci": "ng serve --progress=false --port 4280 --live-reload=false --configuration=e2e",
    "start:ci-data": "tsc && cd test-data && node ../dist/out-tsc/test-data/index.js",
    "cypress:run": "sleep 10 && cypress run",
    "test:e2e": "tsc && ((cd test-data && node ../dist/out-tsc/test-data/index.js test-data-server) & (npm run cypress:ci ; killall -SIGINT test-data-server))",
    "dist": "npm run i18n && ng build --progress=false --prod && cp src/static/manifest.yml src/static/Staticfile src/static/nginx.conf dist",
    "i18n": "ng xi18n --output-path locale --out-file messages.en-GB.xlf",
    "lite": "lite-server --baseDir=dist"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^7.2.2",
    "@angular/core": "^7.2.2",
    "@angular/forms": "^7.2.2",
    "@angular/http": "^7.2.2",
    "@angular/platform-browser": "^7.2.2",
    "@angular/platform-browser-dynamic": "^7.2.2",
    "@angular/router": "^7.2.2",
    "codemirror": "^5.43.0",
    "core-js": "^2.6.3",
    "lodash": "^4.17.19",
    "ng2-codemirror": "^1.1.3",
    "ng4-click-outside": "^1.0.1",
    "rxjs": "^6.3.3",
    "vkbeautify": "^0.99.3",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.8",
    "@angular/cli": "^7.3.10",
    "@angular/compiler": "^7.2.2",
    "@angular/compiler-cli": "^7.2.14",
    "@angular/language-service": "^7.2.2",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@cypress/webpack-preprocessor": "^4.0.3",
    "@types/codemirror": "^0.0.71",
    "@types/jasmine": "^3.4.2",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^10.12.18",
    "@types/vkbeautify": "^0.99.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "angular2-template-loader": "^0.6.2",
    "babel-loader": "^8.0.5",
    "codelyzer": "^4.5.0",
    "cypress": "^3.8.3",
    "eslint": "^6.5.1",
    "eslint-plugin-rxjs": "0.0.2-beta.28",
    "http-server": "^0.11.1",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lite-server": "^2.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.1",
    "tar": "^4.4.8",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.4",
    "wallaby-webpack": "^3.9.13",
    "webpack": "^4.29.0"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
