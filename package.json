{
  "name": "metis-ui",
  "version": "2.0.2-development",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "prettier": "prettier --write '{src,cypress,test-data}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint": "eslint --ext .js,.ts src/app --fix",
    "fix": "npm run prettier && npm run lint",
    "test:dev": "ng test  --code-coverage",
    "cypress": "cypress open",
    "test": "npm run prettier:ci && npm run lint:ci && npm run template-check && npm run test:e2e",
    "template-check": "ng build --progress=false --output-path=tmp/template-check --aot",
    "tsc": "tsc",
    "prettier:ci": "prettier --list-different '{src,cypress}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint:ci": "eslint --ext .ts src/app",
    "test:ci": "ng test --progress=false --watch=false --code-coverage --source-map=false",
    "cypress:ci": "run-p --race start:ci cypress:run",
    "start:ci": "ng serve --progress=false --port 4280 --live-reload=false --configuration=e2e",
    "start:ci-data": "tsc && node ./dist/out-tsc/test-data/index.js",
    "cypress:run": "sleep 10 && cypress run",
    "test:e2e": "tsc && ((node ./dist/out-tsc/test-data/index.js) & (npm run cypress:ci ; fuser -k 3000/tcp))",
    "dist": "npm run i18n && ng build --progress=false --prod && cp src/static/manifest.yml src/static/Staticfile src/static/nginx.conf dist",
    "i18n": "ng xi18n --output-path locale --out-file messages.en-GB.xlf",
    "lite": "lite-server --baseDir=dist"
  },
  "private": true,
  "engines": {
    "node": ">=14.0.1 <15.0.1",
    "npm": ">=6.14.5"
  },
  "dependencies": {
    "@angular/common": "^10.2.4",
    "@angular/core": "^10.2.4",
    "@angular/forms": "^10.2.4",
    "@angular/localize": "^10.2.4",
    "@angular/platform-browser": "^10.2.4",
    "@angular/platform-browser-dynamic": "^10.2.4",
    "@angular/router": "^10.2.4",
    "@ctrl/ngx-codemirror": "^4.1.0",
    "codemirror": "^5.59.0",
    "core-js": "^2.6.12",
    "lodash-es": "^4.17.20",
    "ng-click-outside": "^7.0.1",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "vkbeautify": "^0.99.3",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1100.5",
    "@angular/cli": "^10.2.1",
    "@angular/compiler": "^10.2.4",
    "@angular/compiler-cli": "^10.2.4",
    "@angular/language-service": "^10.2.4",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@cypress/webpack-preprocessor": "^4.1.5",
    "@types/codemirror": "0.0.71",
    "@types/jasmine": "^3.6.2",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.19.9",
    "@types/vkbeautify": "^0.99.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@typescript-eslint/types": "^4.10.0",
    "angular2-template-loader": "^0.6.2",
    "babel-loader": "^8.0.5",
    "codelyzer": "^5.1.2",
    "cypress": "^3.8.3",
    "eslint": "^6.8.0",
    "eslint-plugin-rxjs": "0.0.3-beta.30",
    "http-server": "^0.12.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lite-server": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "tar": "^4.4.8",
    "ts-loader": "^5.3.3",
    "typescript": "^3.9.7",
    "wallaby-webpack": "^3.9.16",
    "webpack": "^4.44.2"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
