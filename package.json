{
  "name": "metis-ui",
  "version": "1.2.0-SNAPSHOT",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "prettier": "prettier --write '{src,cypress}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint": "ng lint --fix",
    "fix": "npm run prettier && npm run lint",
    "test:dev": "ng test",
    "cypress": "cypress open",
    "test": "npm run prettier:ci && npm run lint:ci && npm run template-check && npm run test:ci && npm run cypress:ci",
    "template-check": "ng build --progress=false --output-path=tmp/template-check --aot",
    "prettier:ci": "prettier --list-different '{src,cypress}/**/*.{ts,js,json,scss,html}' '*.{js,json}'",
    "lint:ci": "ng lint",
    "test:ci": "ng test --progress=false --watch=false --code-coverage --source-map=false",
    "cypress:ci": "run-p --race start:ci cypress:run",
    "start:ci": "ng serve --progress=false --port 4280 --live-reload=false",
    "cypress:run": "sleep 10 && cypress run",
    "dist": "ng build --progress=false --prod && cp src/static/manifest.yml src/static/Staticfile src/static/nginx.conf dist"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^7.2.2",
    "@angular/core": "^7.2.2",
    "@angular/forms": "^7.2.2",
    "@angular/http": "^7.2.2",
    "@angular/platform-browser": "^7.2.2",
    "@angular/platform-browser-dynamic": "^7.2.2",
    "@angular/router": "^7.2.2",
    "codemirror": "^5.43.0",
    "core-js": "^2.6.3",
    "ng2-codemirror": "^1.1.3",
    "ng4-click-outside": "^1.0.1",
    "rxjs": "^6.3.3",
    "vkbeautify": "^0.99.3",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.12.3",
    "@angular/cli": "^7.2.3",
    "@angular/compiler": "^7.2.2",
    "@angular/compiler-cli": "^7.2.2",
    "@angular/language-service": "^7.2.2",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@cypress/webpack-preprocessor": "^4.0.3",
    "@types/codemirror": "^0.0.71",
    "@types/jasmine": "^3.3.8",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^10.12.18",
    "@types/vkbeautify": "^0.99.2",
    "angular2-template-loader": "^0.6.2",
    "babel-loader": "^8.0.5",
    "codelyzer": "^4.5.0",
    "cypress": "^3.1.4",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-angular": "^1.1.2",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.2.4",
    "wallaby-webpack": "^3.9.13",
    "webpack": "^4.29.0"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
